@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Header Start -->
<div class="container-fluid bg-primary py-5 mb-5 page-header">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10 text-center">
                <h1 class="display-3 text-white animated slideInDown">About Us</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a class="text-white" href="#">Home</a></li>
                        <li class="breadcrumb-item"><a class="text-white" href="#">Pages</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">About</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- Header End -->
<!-- About Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s" style="min-height: 400px;">
                <div class="position-relative h-100">
                    <img class="img-fluid position-absolute w-100 h-100" src="~/assets/img/about.jpg" alt="" style="object-fit: cover;" />
                </div>
            </div>
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.3s">
                <h6 class="section-title bg-white text-start text-primary pe-3">About Us</h6>
                <h1 class="mb-4">Emus-Institute </h1>
                <p class="mb-4">
                    A Global Educational Initiative Aligned with UN SDG-4 (Quality Education for All)
                </p>
                <p class="mb-4" style="text-align: justify;">
                    At EMUS Institute, we are committed to delivering quality education to underdeveloped communities,
                    underserved societies, and marginalized individuals across the globe. In alignment with Sustainable
                    Development Goal 4 (SDG-4), our mission is to make inclusive, equitable, and practical education accessible
                    to everyone—regardless of location or economic status also you can study and work with us.
                </p>
                <p class="mb-4" style="text-align: justify;">
                    Emus Institute, an innovative online learning platform that empowers students to achieve their academic
                    and professional goals from anywhere in the world. We offer flexible, high-quality degree programs and
                    courses designed to fit their career needs.
                </p>
                <p class="mb-4" style="text-align: justify;">
                    A Global Reach
                    We proudly serve grassroots and remote regions across:
                    North and South America, Latin America, the Caribbean,
                    Middle East, Europe, USA, Asia, Australia, India, Canada, and Africa
                </p>

                <div class="row gy-2 gx-4 mb-4">
                    <div class="col-sm-6">
                        <p class="mb-0 text-start"><i class="fa fa-arrow-right text-primary me-2"></i>Skilled Instructors</p>
                    </div>
                    <div class="col-sm-6">
                        <p class="mb-0 text-start"><i class="fa fa-arrow-right text-primary me-2"></i>Online Classes</p>
                    </div>
                    <div class="col-sm-6">
                        <p class="mb-0 text-start"><i class="fa fa-arrow-right text-primary me-2"></i>Certificate of Completion</p>
                    </div>
                    <div class="col-sm-6">
                        <p class="mb-0 text-start"><i class="fa fa-arrow-right text-primary me-2"></i> Book Library</p>
                    </div>
                    <div class="col-sm-6">
                        <p class="mb-0 text-start"><i class="fa fa-arrow-right text-primary me-2"></i>Home Projects</p>
                    </div>
                    <div class="col-sm-6">
                        <p class="mb-0 text-start"><i class="fa fa-arrow-right text-primary me-2"></i>Questions and Answer Section</p>
                    </div>
                </div>
                <a class="btn btn-primary py-3 px-5 mt-2" asp-controller="Home" asp-action="About">Read More</a>
            </div>
        </div>
    </div>
</div>
<!-- About End -->

<!-- Service Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-4">
            
            <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.3s">
                <div class="service-item text-center pt-3">
                    <div class="p-4">
                        <i class="fa fa-3x fa-globe text-primary mb-4"></i>
                        <h5 class="mb-3">Global Reach</h5>
                        <p> We proudly serve grassroots and remote regions across: 
                            North and South America, Latin America, the Caribbean, 
                            Middle East, Europe, USA, Asia, Australia, India, 
                            Canada, and Africa</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="service-item text-center pt-3">
                    <div class="p-4">
                        <i class="fa fa-3x fa-graduation-cap text-primary mb-4"></i>
                        <h5 class="mb-3">Study & Work Program</h5>
                        <p>
                            We are the first institution to offer a unique
                            Study and Work Program, where students:
                            Gain real-life practical experience, are assessed through
                            actual job performance and receive financial compensation,
                            especially those on scholarships or student aid.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.5s">
                <div class="service-item text-center pt-3">
                    <div class="p-4">
                        <i class="fa fa-3x fa-user text-primary mb-4"></i>
                        <h5 class="mb-3">What We Do</h5>
                        <p>
                            Train and develop highly skilled professionals, provide corporate staff training for organizations, 
                            offer career guidance and development for individuals, employ world-class instructors with years of 
                            practical and academic experience.

                            We currently have over 20,000 students enrolled online and more than 1,000 study centers worldwide.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.7s">
                <div class="service-item text-center pt-3">
                    <div class="p-4">
                        <i class="fa fa-3x fa-book text-primary mb-4"></i>
                        <h5 class="mb-3"> Our Course Categories Include</h5>
                        <p> Technology & Innovation, Business & Management, Creative & Media, Vocational Training, Career Development 
                            and many more fields across industries</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Service End -->
