@model IEnumerable<Core.ViewModels.StaffDocumentationViewModel>

@{
    ViewData["Title"] = "Approved Staff";
    Layout = "~/Views/Shared/_SuperAdminDashboardLayout.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav class="mt-3">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="">Dashboard</a></li>
                <li class="breadcrumb-item active"> Approved Staff </li>
            </ol>
        </nav>
    </div>
    <!-- End Page Title -->
   
    <div class="row mt-5">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-hover table-striped custom-table" id="dataTable">
                    <thead>
                        <tr>
                            @*<th> S/N</th>*@
                            <th> Name </th>
                            <th> Email </th>
                            <th> Staff Position </th>
                            <th> Department Chosen </th>
                            <th> Cover Letter </th>
                            <th> Resume </th>
                            <th> ID </th>
                            <th> Date Applied</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    @if (Model.Count() > 0 && Model != null)
                    {
                        <tbody>
                            @foreach (var staff in Model)
                            {
                                <tr style="font-size:small;">
                                    @*<td></td>*@
                                    <td>@staff.Name </td>
                                    <td>@staff.Email </td>
                                    <td>@staff?.StaffPosition </td>

                                    @if (staff?.StaffPosition == Core.DB.ECollegeEnums.StaffPosition.AcademicStaff)
                                    {
                                        <td> @staff.Department </td>
                                    }
                                    else
                                    {
                                        <td> None </td>
                                    }
                                    <td>
                                        <a class="btn btn-outline-success" style="border-radius: 8px;" data-bs-toggle="modal" data-bs-target="#coverLetter" onclick="viewCoverLetter('@staff.Id')">
                                            View
                                        </a>
                                    </td>
                                    <td>
                                        <a class="btn btn-outline-success" style="border-radius: 8px;" data-bs-toggle="modal" data-bs-target="#resume" onclick="viewResume('@staff.Resume')">
                                            View
                                        </a>
                                    </td>
                                    <td>
                                        <a class="btn btn-outline-success" style="border-radius: 8px;" data-bs-toggle="modal" data-bs-target="#IDimage" onclick="viewIDImage('@staff.Identification')">
                                            <i class="bi bi-eye-fill" aria-hidden="true"></i>
                                        </a>
                                    </td>
                                    <td>@staff?.DateCreated.ToString("D") </td>
                                    <td class="text-center">
                                        <div style="display: flex" class="my-2">
                                            @if (staff?.IsSuspended == true)
                                            {
                                                <button class="btn btn-outline-success rounded-pill mx-1 disabled">
                                                    Suspended
                                                </button>
                                            }else
                                            {
                                                <a class="btn btn-outline-success rounded-pill mx-1" data-toggle="modal" data-target="#suspend_user" onclick="userToSuspend('@staff.UserId')">
                                                    Suspend
                                                </a>
                                            }
                                            <a class="btn btn-outline-success rounded-pill" data-toggle="modal" data-target="#deactivate_user" onclick="userToDeactivate('@staff.UserId')">
                                                Deactivate
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    }

                </table>
            </div>
        </div>
    </div>
</main><!-- End #main -->
<!-- cover letter modal -->
<div class="modal fade" id="coverLetter" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> <b> View Cover Letter </b> </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12 col-lg-12">
                        <textarea rows="8" cols="5" class="form-control" type="text" id="viewCoverLetter" disabled> </textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-success" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- ID modal -->
<div class="modal fade" id="IDimage" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> <b> Valid Identity </b> </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12 col-lg-12 m-auto">
                        <img src="" height="100%" width="100%" class="rounded" alt="img" id="ImageId">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-success" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<!-- resume modal -->
<div class="modal fade" id="resume" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> <b> Resume </b> </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12 col-lg-12 m-auto">
                        @* <img src="" height="100%" width="100%" class="rounded" alt="img" id="ImageId"> *@
                        <iframe id="resumePdfViewer" style="width:100%; height:400px;"></iframe>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-success" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<!-- suspend Modal -->
<div class="modal fade" id="suspend_user" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> <b> Suspend User </b> </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="text-center">Are you sure you want to suspend?</p>
                <div class="modal-btn delete-action">
                    <div class="row m-auto">
                        <input class="form-control" hidden type="text" id="user_id">
                        <div class="col-6">
                            <a class="btn btn-outline-success rounded-pill p-2 d-block" onclick="SuspendUser()">Suspend</a>
                        </div>
                        <div class="col-6">
                            <a data-bs-dismiss="modal" class="btn btn-outline-success rounded-pill p-2 d-block">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /suspend Modal -->

<!-- Deactivate Modal -->
<div class="modal fade" id="deactivate_user" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> <b> Deactivate User </b> </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="text-center">Are you sure you want to deactivate?</p>
                <div class="modal-btn delete-action">
                    <div class="row m-auto">
                        <input class="form-control" hidden type="text" id="user_id">
                        <div class="col-6">
                            <a class="btn btn-outline-success rounded-pill p-2 d-block" onclick="DeactivateUser()">Delete</a>
                        </div>
                        <div class="col-6">
                            <a data-bs-dismiss="modal" class="btn btn-outline-success rounded-pill p-2 d-block">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Deactivate Modal -->