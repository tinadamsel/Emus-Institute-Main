
@model IEnumerable<Core.ViewModels.ApplicationUserViewModel>

@{
    ViewData["Title"] = "Registered Students";
    Layout = "~/Views/Shared/_SuperAdminDashboardLayout.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav class="mt-3">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="">Dashboard</a></li>
                <li class="breadcrumb-item active"> Registered Students</li>
            </ol>
        </nav>
    </div>
    <!-- End Page Title -->

    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-hover table-striped custom-table" id="dataTable">
                    <thead>
                        <tr>
                            <th> S/N</th>
                            <th> Name </th>
                            <th> Date Registered</th>
                            <th> Department </th>
                            <th> State </th>
                            <th> Country </th>
                            <th> Current Session </th>
                            <th> Acdemic Level </th>
                            <th> Email </th>
                            <th> Phone Number </th>
                            <th> StudentID </th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    @if (Model.Count() > 0 && Model != null)
                    {
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td></td>
                                    <td>@user.FullName </td>
                                    <td>@user.DateRegistered.ToString("D")</td>
                                    <td>@user.DepartmentName</td>
                                    <td>@user.State</td>
                                    <td>@user.Country</td>
                                    <td>@user.CurrentSession</td>
                                    <td>@user.AcademicLevel</td>
                                    <td>@user.Email</td>
                                    <td>@user.Phonenumber</td>
                                    <td>@user.StudentId</td>
                                    
                                    <td class="text-right">
                                        <div style="display: flex" class="my-2">
                                            <a class="btn btn-outline-success mx-1" onclick="deptToBeEdited('@user.Id')">
                                                Approve
                                            </a>
                                            <a class="btn btn-outline-success mx-1" onclick="deptToDelete('@user.Id')">
                                                Decline
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    }

                </table>
            </div>
        </div>
    </div>
</main><!-- End #main -->

