@model IEnumerable<Core.ViewModels.ApplicationUserViewModel>

@{
    ViewData["Title"] = "Approved Students";
    Layout = "~/Views/Shared/_SuperAdminDashboardLayout.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav class="mt-3">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="">Dashboard</a></li>
                <li class="breadcrumb-item active"> Approved Students</li>
            </ol>
        </nav>
    </div>
    <!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">
            <!-- Left side columns -->
            @* <div class="col-lg-12"> *@
            @*     <div class="row"> *@

            <!-- Start Button -->
            @* <div class="col-lg-12 col-sm-12 mb-5"> *@
            @*     <button type="button" class="btn btn-outline-success rounded-pill" data-bs-toggle="modal" data-bs-target="#addDept" style=" float: right; margin-right: 20px;"> *@
            @*         Add Departments *@
            @*     </button> *@
            @* </div> *@
            <!-- End Button -->

            @*     </div> *@
            @* </div> *@
            <!-- End Left side columns -->
        </div>
    </section>

    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-hover table-striped custom-table" id="dataTable">
                    <thead>
                        <tr>
                            <th> S/N</th>
                            <th> Name </th>
                            <th> Date Registered</th>
                            <th> Department </th>
                            <th> State </th>
                            <th> Country </th>
                            <th> Current Session </th>
                            <th> Acdemic Level </th>
                            <th> Email </th>
                            <th> Phone Number </th>
                            <th> StudentID </th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    @if (Model.Count() > 0 && Model != null)
                    {
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td></td>
                                    <td>@user.FullName </td>
                                    <td>@user.DateRegistered.ToString("D")</td>
                                    <td>@user.DepartmentName</td>
                                    <td>@user.State</td>
                                    <td>@user.Country</td>
                                    <td>@user.CurrentSession</td>
                                    <td>@user.AcademicLevel</td>
                                    <td>@user.Email</td>
                                    <td>@user.Phonenumber</td>
                                    <td>@user.StudentId</td>
                                    <td class="text-right">
                                        <div style="display: flex" class="my-2">
                                            @* <a class="btn btn-outline-success mx-1" onclick="studentToSuspend('@user.Id')">
                                                Suspend
                                            </a> *@
                                            @if (user?.IsSuspended == true)
                                            {
                                                <button class="btn btn-outline-success rounded-pill mx-1 disabled">
                                                    Suspended
                                                </button>
                                            }
                                            else
                                            {
                                                <a class="btn btn-outline-success mx-1" data-toggle="modal" data-target="#suspend_user" onclick="userToSuspend('@user.Id')">
                                                    Suspend
                                                </a>
                                            }
                                            <a class="btn btn-outline-success mx-1" data-toggle="modal" data-target="#deactivate_user" onclick="userToDeactivate('@user.Id')">
                                                Deactivate
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    }

                </table>
            </div>
        </div>
    </div>
</main><!-- End #main -->


<!-- suspend Modal -->
<div class="modal fade" id="suspend_user" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> <b> Suspend User </b> </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="text-center">Are you sure you want to suspend?</p>
                <div class="modal-btn delete-action">
                    <div class="row m-auto">
                        <input class="form-control" hidden type="text" id="user_id">
                        <div class="col-6">
                            <a class="btn btn-outline-success rounded-pill p-2 d-block" onclick="SuspendUser()">Suspend</a>
                        </div>
                        <div class="col-6">
                            <a data-bs-dismiss="modal" class="btn btn-outline-success rounded-pill p-2 d-block">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- /suspend Modal -->

<!-- Deactivate Modal -->
<div class="modal fade" id="deactivate_user" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> <b> Deactivate User </b> </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="text-center">Are you sure you want to deactivate?</p>
                <div class="modal-btn delete-action">
                    <div class="row m-auto">
                        <input class="form-control" hidden type="text" id="user_id">
                        <div class="col-6">
                            <a class="btn btn-outline-success rounded-pill p-2 d-block" onclick="DeactivateUser()">Delete</a>
                        </div>
                        <div class="col-6">
                            <a data-bs-dismiss="modal" class="btn btn-outline-success rounded-pill p-2 d-block">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Deactivate Modal -->