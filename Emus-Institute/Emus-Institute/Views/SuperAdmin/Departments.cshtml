@model IEnumerable<Core.ViewModels.DepartmentViewModel>

@{
    ViewData["Title"] = "Departments";
    Layout = "~/Views/Shared/_SuperAdminDashboardLayout.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav class="mt-3">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="">Dashboard</a></li>
                <li class="breadcrumb-item active"> Manage Departments</li>
            </ol>
        </nav>
    </div>
    <!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">
            <!-- Left side columns -->
            <div class="col-lg-12">
                <div class="row">
                  
                    <!-- Start Button -->
                    <div class="col-lg-12 col-sm-12 mb-5">
                        <button type="button" class="btn btn-outline-success rounded-pill" data-bs-toggle="modal" data-bs-target="#addDept" style=" float: right; margin-right: 20px;">
                            Add Departments
                        </button>
                    </div>
                    <!-- End Button -->

                </div>
            </div><!-- End Left side columns -->
        </div>
    </section>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-hover table-striped custom-table" id="dataTable">
                    <thead>
                        <tr>
                            <th> S/N</th>
                            <th> Name </th>
                            <th> Description </th>
                            <th> DateCreated</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    @if (Model.Count() > 0 && Model != null)
                    {
                        <tbody>
                            @foreach (var depts in Model)
                            {
                                <tr>
                                    <td></td>
                                    <td>@depts.Name </td>
                                    @* <td>@depts.Description </td> *@
                                    <td>
                                        <button type="button" class="btn btn-outline-success rounded-pill" data-bs-toggle="modal" data-bs-target="#">
                                            <i class="bi bi-eye"></i> &nbsp; View Description
                                        </button>
                                    </td>
                                    <td>@depts.DateCreated.ToString("D")</td>
                                    <td class="text-right">
                                        <a class="btn btn-outline-success " data-toggle="modal" data-target="#edit_dept" onclick="deptToBeEdited('@depts.Id')">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a class="btn btn-outline-success " data-toggle="modal" data-target="#delete_dept" onclick="deptToDelete('@depts.Id')">
                                            <i class="bi bi-trash"></i> Delete 
                                        </a>
                                    </td>
                                </tr>

                                <tr style="display: none;">
                                    <td></td>
                                    <td>@depts.Name </td>
                                    @* <td>@depts.Description </td> *@
                                    <td>
                                        <button type="button" class="btn btn-outline-success rounded-pill" data-bs-toggle="modal" data-bs-target="#">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </td>
                                    <td>@depts.DateCreated.ToString("D")</td>
                                    <td class="text-right">
                                        <a class="btn btn-outline-success " data-toggle="modal" data-target="#edit_dept" onclick="deptToBeEdited('@depts.Id')">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a class="btn btn-outline-success " data-toggle="modal" data-target="#delete_dept" onclick="deptToDelete('@depts.Id')">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    }

                </table>
            </div>
        </div>
    </div>
</main><!-- End #main -->

<!-- Add subject modal start -->
<div class="modal fade" id="addDept" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> <b> Add Departments </b> </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12 col-lg-12">
                        <label class="col-form-label"> Department Name <span class="text-danger">*</span></label>
                        <input class="form-control" type="text" id="dept_Name" required>
                    </div>
                    <div class="col-sm-12 col-lg-12">
                        <label class="col-form-label"> Department Description <span class="text-danger">*</span></label>
                        <textarea rows="4" cols="4" class="form-control" type="text" id="dept_Desc" required> </textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" id="submit_btn" onclick="addDept()">Add Department</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Subject Modal -->
<div class="modal fade" id="edit_dept" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> <b> Edit Dept </b> </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12 col-lg-6">
                        <label class="col-form-label"> Department Name <span class="text-danger">*</span></label>
                        <input class="form-control" type="text" id="edit_dept_Name" required>
                        <input class="form-control" hidden type="text" id="dept_id">
                    </div>
                    <div class="col-sm-12">
                        <label class="col-form-label"> Department Description <span class="text-danger">*</span></label>
                        <textarea rows="4" cols="4" class="form-control" type="text" id="edit_Desc"> </textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" id="submit_btn" onclick="SaveEditedDept()">Edit Department</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->

<div class="modal fade" id="delete_dept" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> <b> Delete Department </b> </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="text-center">Are you sure you want to delete?</p>
                <div class="modal-btn delete-action">
                    <div class="row m-auto">
                        <input class="form-control" hidden type="text" id="dept_id">
                        <div class="col-6">
                            <a class="btn btn-outline-success rounded-pill p-2 d-block" id="deleteSubject" onclick="DeleteDept()">Delete</a>
                        </div>
                        <div class="col-6">
                            <a data-dismiss="modal" class="btn btn-outline-success rounded-pill p-2 d-block">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- /Delete Modal -->