    <script>
        function errorAlert(message) {
            Swal.fire({
                icon: 'error',
                text: message,
            })
        }

        function infoAlert(message) {
            Swal.fire({
                icon: 'info',
                text: message,
            })
        }

        function infoAlertWithStyles(message) {
            Swal.fire({
                title: 'Notification',
                icon: 'info',
                text: message,
            })
        }

        function successAlert(message) {
            Swal.fire({
                icon: 'success',
                text: message,
            })
        }

        function newSuccessAlert(message, url) {
            Swal.fire({
                icon: 'success',
                text: message,
            }).then(function () {

                location.href = url;
            })
        }

        function successAlertWithRedirect(message, url) {
            swal.fire({
                title: "Success",
                text: message,
                icon: "success",
                timer: "30000",
                overlay: "background-color: #06BBCC",
            }).then(function () {

                location.href = url;
            })
        }

        function successAlertWithDoubleButtons(message, url) {
            swal.fire({
                title: "Success",
                text: message,
                icon: "success",
                showCancelButton: true,
                cancelButtonColor: "#dba622",
                confirmButtonText: "Pay Reg Bonus",
                confirmButtonColor:	"#006400",
            }).then((result) =>{
                if (result.isConfirmed) {
                    location.href = url;
                }
                else{
                location.reload();
                }
            })
        }

    </script>
